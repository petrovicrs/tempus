<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% if page_title %}{{ page_title }} | {% endif %}{% trans %}base.head_title{% endtrans %}</title>
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
        {% include 'js-scripts.html.twig' %}
        {% include 'stylesheets.html.twig' %}
    </head>
    <body>
        <div id="page-wrapper">
            <div id="horizontal-tape"></div>
            <div id="page" class="container">
                {% include 'menu-bar/menu-bar.html.twig' %}
                {% include 'alert.html.twig' %}
                <div id="columns" class="columns clearfix">
                    <main id="content-column" class="content-column" role="main">
                        <div class="content-inner">
                            <div id="main-content">
                                <header>
                                    <h1 id="page-title">{{ page_title }}</h1>
                                </header>
                                <div id="content" class="region">
                                    <div class="loader"></div>
                                    {% block body %}{% endblock %}
                                </div>
                            </div>
                        </div>
                    </main>
                </div>
                <footer class="container-fluid" id="footer">
                    <div class="row-fluid">
                        <p class="col-md-12">
                            <small>
                                Tempus Â©
                                <img alt="" class="logo" src="/images/eu_flag_tempus.png">
                            </small>
                        </p>
                    </div>
                </footer>
            </div>
        </div>
    </body>
</html>
