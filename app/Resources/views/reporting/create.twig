{% extends 'base.html.twig' %}

{% block body %}
    <script type="text/javascript" src="{{ asset('/js/reporting.js')}}"></script>
    <section id="main">
    {% if keyAction == 'ka1' %}
        {% include 'sub-navbar.html.twig' with {'active': 'reporting'} %}
    {% endif %}
    {%  if keyAction == 'ka2' %}
        {% include 'sub-navbar-ka2.html.twig' with {'active': 'reporting'} %}
    {% endif %}
    <div class="container-fluid">
        <div class="row">
            <div class="controls reporting">
                <a href="{{ localizedPath('result_edit', {projectId: projectId}) }}"><button>Back</button></a>
                <div class="col-xs-12">
                    {{ form_start(my_form) }}
                        <div class="col-xs-12">
                            <h2>{% trans %}Add Reporting{% endtrans %}</h2>
                        </div>

                        <div class="row">
                            <div class="col-xs-9">
                                <div class="col-xs-3">
                                    {{ form_label(my_form.type, 'Monitoring type'|trans, {'label_attr': {'class': 'control-label'}}) }}
                                    <div class="form">
                                        {{ form_widget(my_form.type, {'attr': {'class': 'form-control'}})  }}
                                    </div>
                                </div>
                                <div class="col-xs-3">
                                    {{ form_label(my_form.reportingDate, 'Monitoring visit on'|trans, {'label_attr': {'class': 'control-label'}}) }}
                                    <div class="form">
                                        {{ form_widget(my_form.reportingDate) }}
                                    </div>
                                </div>

                                {% for key, qa in questions %}
                                    <div class="col-xs-12">
                                        <div class="col-xs-6">
                                            <p>{{ qa.questions(app.request.getLocale()) }}</p>
                                        </div>
                                        <div class="col-xs-6">
                                            <div class="form">
                                                <textarea id="appbundle_project_questionsAndAnswers_{{ key }}_answerEn" name="appbundle_project[questionsAndAnswers][{{ key }}][answerEn]" required="required" class="form-control"></textarea>
                                            </div>
                                        </div>
                                    </div>
                                {% endfor %}

                                <div class="col-xs-12">
                                    {{ form_label(my_form.commentsAndSuggestions, 'Comments and suggestions'|trans, {'label_attr': {'class': 'control-label'}}) }}
                                    <div class="form">
                                        {{ form_widget(my_form.commentsAndSuggestions, {'attr': {'class': 'form-control'}})  }}
                                    </div>
                                </div>

                                <div class="col-xs-12">
                                    {{ form_widget(my_form.submit, { 'label': 'Submit' }) }}
                                </div>
                            </div>

                            <div class="col-xs-3">
                                <ul class="reporting-by" data-prototype="{{include('/reporting/includes/reporting-by.html.twig',
                                {'form': my_form.reportingBy.vars.prototype })|e}}">
                                </ul>
                            </div>
                        </div>
                    {{ form_end(my_form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}