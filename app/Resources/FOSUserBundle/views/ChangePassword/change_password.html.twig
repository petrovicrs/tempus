{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    {{ form_start(form, { 'action': path('fos_user_change_password', {'locale': app.request.getLocale()}), 'attr': { 'class': 'fos_user_change_password' } }) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" value="{{ 'change_password.submit'|trans }}" />
    </div>
    {{ form_end(form) }}

{% endblock %}
