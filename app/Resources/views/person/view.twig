{% extends 'base.html.twig' %}
        {% block body %}
        <section id="main">
            <div class="container-fluid">
                <div class="page-header">
                    <h1>Person: <b>{{ person.name }} {{ person.surname }}</b></h1>
                </div>
                <h2>Person contact:</h2>
                <table class="table table-hover" data-toggle="table">
                    <thead>
                        <tr class="table-header">
                            <th class="sortable" data-field="project_title" data-sortable="true">Type</th>
                            <th class="sortable" data-sortable="true">Value</th>
                        </tr>
                    </thead>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.contactType }}</td>
                            <td>{{ contact.contactValue }}</td>
                        </tr>
                    {% endfor %}
                </table>

                <a href="{{ path('person_contacts_create_form', {'personId':person.id}) }}">Add new contact</a>

            </div>
        </section>
        {% endblock %}