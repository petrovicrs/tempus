{% extends 'base.html.twig' %}

{% block body %}
    <section id="main">
        {% include 'sub-navbar-ka2-list.html.twig' with {'active': 'monitoring'} %}
        <div class="container-fluid">
            <div class="col-xs-12 section-heading">
                <h2><b>{% trans %}Monitoring/Reporting{% endtrans %}</b></h2>
            </div>

            <table class="table table-hover" data-toggle="table">
                <thead>
                    <tr class="table-heleer">
                        <th class="sortable"  data-sortable="true">{% trans %}Id{% endtrans %}</th>
                        <th class="sortable"  data-sortable="true">{% trans %}Project{% endtrans %}</th>
                        <th>{% trans %}Monitoring/Reporting{% endtrans %}</th>
                        <th class="sortable"  data-sortable="true">{% trans %}Created on{% endtrans %}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, value in projectMonitoring %}
                        <tr>
                            <td class="text-center">{{ value.id }}</td>
                            <td ><a href="{{ localizedPath('project_view', {'projectId': value.project.id}) }}">{{ value.project.name(app.request.getLocale()) }}</a></td>

                            {% if value.monitoringReporting %}
                                <td class="text-center">{{ value.monitoringReporting | length }}</td>
                            {% else %}
                                <td class="text-center">0</td>
                            {% endif %}

                            <td class="text-center">{{ value.dateCreated | date('d/m/y')}}</td>

                            {#{% if value.monitoringReporting.commentType %}#}
                                {#<td>{{ value.monitoringReporting.commentType.name(app.request.getLocale())}}</td>#}
                            {#{% else %}#}
                                {#<td></td>#}
                            {#{% endif %}#}

                            {#<td>{{ value.monitoringReporting.comment }}</td>#}

                            <td class="text-center"><a href="{{ localizedPath('monitoring_view', {'id': value.project.id}) }}">View</a></td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    <div>
{% endblock %}