{% extends 'base.html.twig' %}

{% block body %}
    <script type="text/javascript" src="{{ asset('/js/collapsible.js')}}"></script>
    <section id="main">
        {% if keyAction == 'ka1' %}
            {% include 'sub-navbar.html.twig' with {'active': 'resources'} %}
        {% endif %}
        {%  if keyAction == 'ka2' %}
            {% include 'sub-navbar-ka2.html.twig' with {'active': 'resources'} %}
        {% endif %}
    <div class="container-fluid">
        <a href="{{ localizedPath('resource_edit', {'projectId': projectResources.project.id}) }}" class="btn btn-add btn-success "><span aria-hidden="true"></span>{% trans %}Edit{% endtrans %}</a>
        <h2><b>{% trans %}Resource{% endtrans %}</b></h2>

        <table class="table table-hover" data-toggle="table">
            <thead>
                <tr class="table-header">
                    <th>{% trans %}Resource title{% endtrans %}</th>
                    <th>{% trans %}Type{% endtrans %}</th>
                    <th>{% trans %}Keywords{% endtrans %}</th>
                    <th>{% trans %}Project{% endtrans %}</th>
                    <th>{% trans %}Public?{% endtrans %}</th>
                </tr>
            </thead>

            <tbody>
            {% for r in projectResources.resources %}
                <tr class="details-row" data-collapsible-open="{{ loop.index0 }}">
                    <td>{{ r.title(app.request.getLocale()) }}</td>
                    <td>{{ r.resourceType.name(app.request.getLocale()) }}</td>
                    <td>{{ r.keywords }}</td>
                    <td><a href="{{ localizedPath('project_view', {'projectId': r.projectResources.project.id}) }}">{{ r.projectResources.project.name(app.request.getLocale()) }}</a></td>
                    {% if r.isPublic %}
                        <td class="text-center">{% trans %}Yes{% endtrans %}</td>
                    {% else %}
                        <td class="text-center">{% trans %}No{% endtrans %}</td>
                    {% endif %}
                </tr>
                <tr class="details-wrapper" data-collapsible-close="{{ loop.index0 }}">
                    <td colspan="5">
                        <div class="details-wrapper-inner">
                            <h2>{% trans %}Abstract{% endtrans %}</h2>
                            <p>{{ r.abstract }}</p>
                            <h2>{% trans %}Attachments{% endtrans %}</h2>
                            <p>{% trans %}Files{% endtrans %}</p>
                        </div>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div>
{% endblock %}