{% extends 'base.html.twig' %}

{% block body %}
    <section id="main">
    {% include 'sub-navbar-ka2-list.html.twig' with {'active': 'partners'} %}
        <div class="container-fluid">
            <div class="col-xs-12 section-heading">
                <h2><b>{% trans %}Project Partners/Participants{% endtrans %}</b></h2>
            </div>
            <table class="table table-hover" data-toggle="table">
                <thead>
                <tr class="table-header">
                    <th class="sortable" data-sortable="true">{% trans %}Id{% endtrans %}</th>
                    <th class="sortable" data-sortable="true">{% trans %}Project{% endtrans %}</th>
                    <th>{% trans %}Partners{% endtrans %}</th>
                    <th>{% trans %}Participants{% endtrans %}</th>
                    <th class="sortable" data-sortable="true">{% trans %}Created on{% endtrans %}</th>
                    <th></th>
                </tr>
                </thead>

                <tbody>
                {% for key,value in partners %}
                    <tr>
                        <td class="text-center">{{ value.id }}</td>
                        <td>{{ value.project.name(app.request.locale) }}</td>
                        <td class="text-center">{{ value.partners | length }}</td>
                        <td class="text-center">{{ value.participants | length }}</td>
                        <td class="text-center">{{ value.dateCreated | date('d/m/y') }}</td>
                        <td class="text-center"><a href="{{ localizedPath('partner_view', {'projectId': value.project.id}) }}">View</a></td>
                    </tr>
                {% endfor %}
                </tbody>
            </table>
        </div>
    <div>
{% endblock %}