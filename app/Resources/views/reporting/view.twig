{% extends 'base.html.twig' %}

{% block body %}
    <script type="text/javascript" src="{{ asset('/js/collapsible.js')}}"></script>
    <script type="text/javascript" src="{{ asset('/js/reporting.js')}}"></script>
    <section id="main">
        {% if keyAction == 'ka1' %}
            {% include 'sub-navbar-view.html.twig' with {'active': 'reporting', 'projectId': projectId, 'actionTab': actionTab} %}
        {% endif %}
        {%  if keyAction == 'ka2' %}
            {% include 'sub-navbar-ka2-view.html.twig' with {'active': 'reporting', 'projectId': projectId} %}
        {% endif %}
    <div class="container-fluid">
        {% if reports %}
            <h2><b>{% trans %}Reporting{% endtrans %}</b></h2>
            <div class="col-xs-12">
                <h2>{% trans %}Osnovne informacije{% endtrans %}</h2>
            </div>
            <table class="table table-hover" data-toggle="table">
                <tr>
                    <td><b>{% trans %}Savetnik za projekte koji obradjuje izvestaj{% endtrans %}</b>: {{ reports.savetnik ? reports.savetnik.fullName : 'N/A'}}</td>
                    <td><b>{% trans %}Kontrolu izvrsio{% endtrans %}</b>: {{ reports.kontroluIzvrsio ? reports.kontroluIzvrsio : 'N/A'}}</td>
                    <td><b>{% trans %}Datum prijema izvestaja{% endtrans %}</b>: {{ reports.datumPrijemaIzvestaja ? reports.datumPrijemaIzvestaja | date('d/m/y') : 'N/A'}}</td>
                </tr>
                <tr>
                    <td><b>{% trans %}Izvestaj porkiva period od{% endtrans %}</b>: {{ reports.periodOd ? reports.periodOd | date('d/m/y') : 'N/A'}}
                    <b>{% trans %}do{% endtrans %}</b>: {{ reports.periodDo ? reports.periodDo | date('d/m/y') : 'N/A'}}</td>
                    <td><b>{% trans %}Da li je projektna dokumentacija potpuna?{% endtrans %}</b> {{ reports.dokumentacijaPotupna ? reports.dokumentacijaPotupna : 'N/A'}}</td>
                    <td><b>{% trans %}Da li je korisnik dostavio trazenu dodatnu dokumentaciju?{% endtrans %}</b> {{ reports.korisnikDostavioDodatnuDokumentaciju ? reports.korisnikDostavioDodatnuDokumentaciju : 'N/A'}}</td>
                </tr>
                <tr>
                    <td><b>{% trans %}Da li je projekat bio predmet monitoringa?{% endtrans %}</b> {{ reports.predmetMonitoringa ? reports.predmetMonitoringa : 'N/A'}}</td>
                    <td><b>{% trans %}Datum poslednjeg monitoringa{% endtrans %}</b>: {{ reports.poslednjiMonitoring ? reports.poslednjiMonitoring | date('d/m/y') : 'N/A'}}</td>
                    <td><b>{% trans %}Da li su uvazene preporuke za monitoringa posete?{% endtrans %}</b> {{ reports.uvazenePrporuke ? reports.uvazenePrporuke : 'N/A'}}</td>
                </tr>
            </table>
            <div class="col-xs-12">
                <h2>{% trans %}Analiza projektnih aktivnosti i ishoda{% endtrans %}</h2>
            </div>
            <div class="col-xs-12">
                <h3>{% trans %}Pitanja koja se odnose na obradu izvestaja o napretku, srednjerocnog i zavrsnog izvestaja {% endtrans %}</h3>
            </div>
            <div class="col-xs-12">
                <h3><b>{% trans %}Pripremne aktivnosti {% endtrans %}</b></h3>
            </div><br/>
            <table class="table table-hover" data-toggle="table">
                <tr>
                    <td><b>{% trans %}Da li je Evropski razvojni plan usvojen na nivou organizacije?{% endtrans %}</b> {{ reports.pitanje1 ? reports.pitanje1 : 'N/A'}}</td>
                    <td><b>{% trans %}Da li je projekat doprineo realizaciji Evropskog razvojnog plana?{% endtrans %}</b> {{ reports.pitanje2 ? reports.pitanje2 : 'N/A'}}</td>
                    <td><b>{% trans %}Ukoliko jeste na koji nacin?{% endtrans %}</b> {{ reports.pitanje2pp1 ? reports.pitanje2pp1 : 'N/A'}}</td>
                </tr>
                <tr>
                    <td><b>{% trans %}Da li se sprovode aktivnosti diseminacije rezultata u skladu sa projektnom prijavom?{% endtrans %}</b> {{ reports.pitanje3 ? reports.pitanje3 : 'N/A'}}</td>
                    <td><b>{% trans %}Ukoliko ne, navesti uzroke, prepreke i preporuke:{% endtrans %}</b> {{ reports.pitanje3pp1 ? reports.pitanje3pp1 : 'N/A'}}</td>
                    <td><b>{% trans %}Da li se postuju zahtevi vidljivosti (koriscenje E+ logoa)?{% endtrans %}</b> {{ reports.pitanje4 ? reports.pitanje4 : 'N/A'}}</td>
                </tr>
            </table>
            <div class="col-xs-12">
                <h3><b>{% trans %}Sprovodjenje mobilnosti {% endtrans %}</b></h3>
            </div><br/>
            <table class="table table-hover" data-toggle="table">
                <tr>
                    <td><b>{% trans %}Da li je proces izbora ucesnika mobilnosti bio transparentan?{% endtrans %}</b> {{ reports.pitanje5 ? reports.pitanje5 : 'N/A'}}</td>
                    <td><b>{% trans %}Da li su definisani kriterijumi selekcije ucesika mobilnosti?{% endtrans %}</b> {{ reports.pitanje6 ? reports.pitanje6 : 'N/A'}}</td>
                    <td><b>{% trans %}Da li su ispostovani kriterijumi selekcije ucesnika mobilnosti?{% endtrans %}</b> {{ reports.pitanje7 ? reports.pitanje7 : 'N/A'}}</td>
                </tr>
                <tr>
                    <td><b>{% trans %}U kojoj meri je priprema ucesnika bila u skladu sa aplikacijom? (Orijentacioni kursevi i jezicke pripreme){% endtrans %}</b>: {{ reports.pitanje8 ? reports.pitanje8 : 'N/A'}}</td>
                    <td colspan="2"><b>{% trans %}Da li se redovno koristi Mobility Tool, u rokovima koje propisuje Ugovor?{% endtrans %}</b> {{ reports.pitanje9 ? reports.pitanje9 : 'N/A'}}</td>
                </tr>
            </table>

            
        {% else %}
            <h2><b>{% trans %}Reporting no added{% endtrans %}</b></h2>
        {% endif %}
    </div>
{% endblock %}