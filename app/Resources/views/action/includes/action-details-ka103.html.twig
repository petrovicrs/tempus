    {{ form_row(form.distance, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.incomingOutgoing, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.trainingShip, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.startDate, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.endDate, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.durationMonths, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.durationExtraDays, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.apprentice, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.student, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.groupLeader, { 'attr': {'class': 'hidden-row'} }) }}
    {{ form_row(form.venue, { 'attr': {'class': 'hidden-row'} }) }}
