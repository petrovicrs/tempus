{% extends 'base.html.twig' %}
        {% block body %}
        <section id="main">
            <div class="container-fluid">
                <div class="page-header">
                    <h1>{% trans %}Person{% endtrans %}: <b>{{ person.name }} {{ person.surname }}</b></h1>
                </div>
                <h2>{% trans %}Person contact{% endtrans %}:</h2>
                <table class="table table-hover" data-toggle="table">
                    <thead>
                        <tr class="table-header">
                            <th class="sortable" data-field="project_title" data-sortable="true">{% trans %}Type{% endtrans %}</th>
                            <th class="sortable" data-sortable="true">{% trans %}Value{% endtrans %}</th>
                        </tr>
                    </thead>
                    {% for contact in contacts %}
                        <tr>
                            <td>{{ contact.contactType }}</td>
                            <td>{{ contact.contactValue }}</td>
                        </tr>
                    {% endfor %}
                </table>

                <a href="{{ localizedPath('person_contacts_create_form', {'personId':person.id}) }}">{% trans %}Add new contact{% endtrans %}</a>

            </div>
        </section>
        {% endblock %}