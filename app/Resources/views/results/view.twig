{% extends 'base.html.twig' %}

{% block body %}
    <section id="main">
    {% include 'main-navbar.html.twig' with {'active': 'results'} %}
    <div class="container-fluid">
        <a href="{{ localizedPath('result_edit', {'resultId': result.id}) }}" class="btn btn-add btn-success "><span aria-hidden="true"></span>{% trans %}Edit{% endtrans %}</a>
        <h2><b>{% trans %}Results{% endtrans %}</b></h2>

        <table class="table table-hover" data-toggle="table">
            <thead>
            <tr class="table-heleer">
                <th>{% trans %}Result title{% endtrans %}</th>
                <th>{% trans %}Type{% endtrans %}</th>
                <th>{% trans %}Project{% endtrans %}</th>
                <th>{% trans %}Status{% endtrans %}</th>
                <th>{% trans %}Public{% endtrans %}</th>
                <th>{% trans %}Show description{% endtrans %}</th>
            </tr>
            </thead>
            <tbody>
                <tr>
                    <td>{{ result.title(app.request.getLocale()) }}</td>
                    {#<td>{{ result.resultType.name(app.request.getLocale()) }}</td>#}
                    <td><a href="{{ localizedPath('project_view', {'projectId': result.project.id}) }}">{{ result.project.name(app.request.getLocale()) }}</a></td>
                    {#<td>{{ result.status }}</td>#}
                    {% if result.isPublic %}
                        <td class="text-center">{% trans %}Yes{% endtrans %}</td>
                    {% else %}
                        <td class="text-center">{% trans %}No{% endtrans %}</td>
                    {% endif %}
                    {% if result.showDescription %}
                        <td class="text-center">{% trans %}Yes{% endtrans %}</td>
                    {% else %}
                        <td class="text-center">{% trans %}No{% endtrans %}</td>
                    {% endif %}
                </tr>
            </tbody>
        </table>

        <div class="col-xs-12 no-padding">
            <h2>Description</h2>
            <p>{{ result.description(app.request.getLocale()) }}</p>
        </div>

        <div class="col-xs-12 no-padding">
            <h2>Notes</h2>
            {# TODO list filest #}
            <p>{{ result.notes }}</p>
        </div>
    </div>
    <div>
{% endblock %}