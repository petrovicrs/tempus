{% extends 'base.html.twig' %}
{% block body %}
    <script type="text/javascript" src="{{ asset('/js/persons.js')}}"></script>
    <section id="main">
        <div class="container-fluid">
            <div class="row-fluid">

                <div class="page-header">
                    <h1>{% trans %}Add Person{% endtrans %}</h1>
                </div>


                <div class="row">
                    <div class="controls">
                        {{ form_start(my_form) }}


                            <div class="form-group">
                                {{ form_label(my_form.firstNameEn, 'First name Eng'|trans, {'label_attr': {'class':
                                'control-label col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.firstNameEn, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                {{ form_label(my_form.firstNameSr, 'First name Srb'|trans, {'label_attr': {'class':
                                'control-label col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.firstNameSr, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                {{ form_label(my_form.firstNameOriginalLetter, 'First name Original alphabet'|trans,
                                {'label_attr': {'class': 'control-label col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.firstNameOriginalLetter, {'attr': {'class': 'form-control'}}) }}
                                </div>


                                {{ form_label(my_form.lastNameEn, 'Last name Eng'|trans, {'label_attr': {'class': 'control-label
                                col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.lastNameEn, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                {{ form_label(my_form.lastNameSr, 'Last name Srb'|trans, {'label_attr': {'class': 'control-label
                                col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.lastNameSr, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                {{ form_label(my_form.lastNameOriginalLetter, 'Last name Original alphabet'|trans,
                                {'label_attr': {'class': 'control-label col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.lastNameOriginalLetter, {'attr': {'class': 'form-control'}}) }}
                                </div>


                                {{ form_label(my_form.initials, 'Initials'|trans, {'label_attr': {'class': 'control-label
                                col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.initials, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                {{ form_label(my_form.titlePrefix, 'Title (prefix)'|trans, {'label_attr': {'class':
                                'control-label col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.titlePrefix, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                {{ form_label(my_form.titleSuffix, 'Title (suffix)'|trans, {'label_attr': {'class':
                                'control-label col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.titleSuffix, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                {{ form_label(my_form.gender, 'Gender'|trans, {'label_attr': {'class': 'control-label
                                col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.gender, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <div class="form-inline">
                                    {{ form_widget(my_form.hasDisability, { 'label': 'Person with disabilities'|trans }) }}
                                </div>

                                <div class="form-inline">
                                    {{ form_widget(my_form.hasFewerOpportunities, {'label': 'Person with fewer
                                    opportunities'|trans}) }}
                                </div>

                                {{ form_label(my_form.fieldOfExpertise, 'Field of expertise'|trans, {'label_attr': {'class':
                                'control-label col-xs-2'}}) }}
                                <div class="form-inline">
                                    {{ form_widget(my_form.fieldOfExpertise, {'attr': {'class': 'form-control'}}) }}
                                </div>

                                <ul class="contacts" data-purpose="edit" data-prototype="{{ include('/person/includes/person-contact.html.twig',
                                    {'form': my_form.contacts.vars.prototype })|e }}">
                                    {% for contact in my_form.contacts %}
                                    <li>{{ include('/person/includes/person-contact.html.twig', {'form': contact }) }}</li>
                                    {% endfor %}
                                </ul>

                                <ul class="addresses" data-purpose="edit" data-prototype="{{ include('/person/includes/person-address.html.twig',
                                    {'form': my_form.addresses.vars.prototype })|e }}">
                                    {% for address in my_form.addresses %}
                                    <li>{{ include('/person/includes/person-address.html.twig', {'form': address }) }}</li>
                                    {% endfor %}
                                </ul>

                                <ul class="person-notes" data-purpose="edit" data-prototype="{{ include('/person/includes/person-note.html.twig',
                                    {'form': my_form.personNotes.vars.prototype })|e }}">
                                    {% for personNote in my_form.personNotes %}
                                    <li>{{ include('/person/includes/person-note.html.twig', {'form': personNote }) }}</li>
                                    {% endfor %}
                                </ul>

                                <ul class="person-documents" data-purpose="edit" data-prototype="{{ include('/person/includes/person-document.html.twig',
                                    {'form': my_form.personDocuments.vars.prototype })|e }}">
                                    {% for personDocument in my_form.personDocuments %}
                                    <li>{{ include('/person/includes/person-document.html.twig', {'form': personDocument }) }}
                                    </li>
                                    {% endfor %}
                                </ul>


                                <ul class="person-institution-relationships" data-purpose="edit" data-prototype="{{ include('/person/includes/person-institution-relationship.html.twig',
                                    {'form': my_form.personInstitutionRelationships.vars.prototype })|e }}">
                                    {% for personInstitutionrelationship in my_form.personInstitutionRelationships %}
                                    <li>{{ include('/person/includes/person-institution-relationship.html.twig', {'form':
                                        personInstitutionrelationship }) }}
                                    </li>
                                    {% endfor %}
                                </ul>

                                <ul class="person-facing-situations" data-purpose="edit" data-prototype="{{ include('/person/includes/person-facing-situation.html.twig',
                                    {'form': my_form.personFacingSituations.vars.prototype })|e }}">
                                    {% for personFacingSituation in my_form.personFacingSituations %}
                                    <li>{{ include('/person/includes/person-facing-situation.html.twig', {'form':
                                        personFacingSituation }) }}
                                    </li>
                                    {% endfor %}
                                </ul>

                                <div class="form-inline">
                                    {{ form_widget(my_form.submit, { 'label': 'Save'|trans}, {'attr': {'class':
                                    'form-control'}}) }}
                                </div>

                        </div>

                        {{ form_end(my_form) }}
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}