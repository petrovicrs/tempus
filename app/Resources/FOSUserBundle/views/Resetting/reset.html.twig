{% extends 'user-layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    {{ form_start(form, { 'action': path('fos_user_resetting_reset', {'token': token, 'locale': app.request.getLocale()}), 'attr': { 'class': 'fos_user_resetting_reset' } }) }}
    {{ form_widget(form) }}
    <div>
        <input type="submit" class="btn btn-primary" value="{{ 'resetting.reset.submit'|trans }}" />
    </div>
    {{ form_end(form) }}

{% endblock %}
