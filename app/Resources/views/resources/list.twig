{% extends 'base.html.twig' %}

{% block body %}
    <section id="main">
        {% include 'sub-navbar.html.twig' with {'active': 'resources'} %}
        <div class="container-fluid">
            <div class="col-xs-12 section-heading">
                <h2><b>{% trans %}Resources{% endtrans %}</b></h2>
            </div>

            <table class="table table-hover" data-toggle="table">
                <thead>
                    <tr class="table-heleer">
                        <th class="sortable"  data-sortable="true">{% trans %}Id{% endtrans %}</th>
                        <th class="sortable"  data-sortable="true">{% trans %}Project{% endtrans %}</th>
                        <th>{% trans %}Resources{% endtrans %}</th>
                        <th class="sortable"  data-sortable="true">{% trans %}Created on{% endtrans %}</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for key, resource in projectResources %}
                        {#{% if resource.isPublic %}#}
                            <tr>
                                <td class="text-center">{{ resource.id }}</td>
                                <td><a href="{{ localizedPath('project_view', {'projectId': resource.project.id}) }}">{{ resource.project.name(app.request.getLocale()) }}</a></td>
                                <td class="text-center">{{ resource.resources | length }}</td>
                                <td class="text-center">{{ resource.dateCreated | date('d/m/y') }}</td>
                                <td class="text-center"><a href="{{ localizedPath('resource_view', {'projectId': resource.project.id}) }}">View</a></td>

                                {# TODO count attachments #}
                            </tr>
                        {#{% endif %}#}
                    {% endfor %}
                </tbody>
            </table>
        </div>
    <div>
{% endblock %}