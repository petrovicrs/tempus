{% extends 'base.html.twig' %}

{% block body %}
    <section id="main">
    {% include 'sub-navbar.html.twig' with {'active': 'monitoring'} %}
    <div class="container-fluid">
        <div class="row">
            <div class="controls resources">
                <div class="col-sm-12">
                    {{ form_start(my_form) }}
                        <h2>{% trans %}Add Monitoring{% endtrans %}</h2>

                        <div class="form-group">
                            <div class="row">
                                <div class="col-xs-12">
                                    <div class="col-xs-3">
                                        {{ form_label(my_form.monitoringType, 'Monitoring type'|trans, {'label_attr': {'class': 'control-label'}}) }}
                                        <div class="form">
                                            {{ form_widget(my_form.monitoringType, {'attr': {'class': 'form-control'}})  }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    <div class="col-xs-3">
                                        {{ form_label(my_form.monitoringDate, 'Monitoring date'|trans, {'label_attr': {'class': 'control-label'}}) }}
                                        <div class="form">
                                            {{ form_widget(my_form.monitoringDate, {'attr': {'class': 'form-control'}})  }}
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12">
                                    <div class="col-xs-3">
                                        {{ form_label(my_form.commentType, 'Comment type'|trans, {'label_attr': {'class': 'control-label'}}) }}
                                        <div class="form">
                                            {{ form_widget(my_form.commentType, {'attr': {'class': 'form-control'}})  }}
                                        </div>
                                    </div>
                                </div>
                                <div class="col-xs-12">
                                    {{ form_label(my_form.comment, 'Comment'|trans, {'label_attr': {'class': 'control-label'}}) }}
                                    <div class="form">
                                        {{ form_widget(my_form.comment, {'attr': {'class': 'form-control'}})  }}
                                    </div>
                                </div>
                            </div>
                        </div>
                    {{ form_end(my_form) }}
                </div>

            </div>
        </div>
    </div>
{% endblock %}