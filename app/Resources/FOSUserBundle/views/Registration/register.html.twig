{% extends 'user-layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block body %}

    {% form_theme form 'bootstrap_4_layout.html.twig' %}

    {{ form_start(form, {'method': 'post', 'action': path('fos_user_registration_register', {'locale': app.request.getLocale()}), 'attr': {'class': 'fos_user_registration_register'}}) }}
    {{ form_widget(form) }}
    <div>
        <input class="btn btn-primary" type="submit" value="{{ 'registration.submit'|trans }}" />
    </div>
    {{ form_end(form) }}

{% endblock %}
